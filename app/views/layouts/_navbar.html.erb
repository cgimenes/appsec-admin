<nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation" aria-label="main navigation">
  <div class="container-fluid">
    <a class="navbar-brand mb-0 h1" href="<%= root_path %>">
      <%= image_tag 'logo_white.png', {height: 30, width: 30, class: 'd-inline-block align-top'} %>
      AppSecAdmin
    </a>

    <div class="collapse navbar-collapse" id="navbarToggler">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
        <% if can? :read, Vuln %>
          <li class="nav-item <%= 'active' if current_page?(vulns_path) %>">
            <%= link_to 'Vulnerabilities', vulns_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if can? :read, User %>
          <li class="nav-item <%= 'active' if current_page?(users_path) %>">
            <%= link_to 'Users', users_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if can? :read, Team %>
          <li class="nav-item <%= 'active' if current_page?(teams_path) %>">
            <%= link_to 'Teams', teams_path, class: 'nav-link' %>
          </li>
        <% end %>
        <% if can? :read, Asset %>
          <li class="nav-item <%= 'active' if current_page?(assets_path) %>">
            <%= link_to 'Assets', assets_path, class: 'nav-link' %>
          </li>
        <% end %>
      </ul>
      <div class="d-flex justify-content-end align-items-center">
        <% if user_signed_in? %>
          <span class="navbar-text mr-2"><small><%= current_user.fullname %></small></span>
        <% end %>
        <% if user_signed_in? %>
          <a rel="nofollow" data-method="delete" class="btn btn-outline-light btn-sm" href="<%= destroy_user_session_path %>" role="button">
                <span class="icon">
                  <i class="fa fa-user-times"></i>
                </span>
            <span>Sign out</span>
          </a>
        <% elsif !current_page?(new_user_path) %>
          <a class="btn btn-outline-light btn-sm" href="<%= new_user_path %>" role="button">
                <span class="icon">
                  <i class="fa fa-user"></i>
                </span>
            <span>Sign in</span>
          </a>
        <% end %>
      </div>
    </div>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler" aria-controls="navbarToggler" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </div>
</nav>
