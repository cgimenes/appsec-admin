<%= inside_layout "main" do %>
  <div class="container-fluid">
    <div class="mt-3 row justify-content-between">
      <div class="col">
        <h1>
          <%= yield :title %>
        </h1>
      </div>
      <div class="col-5 d-flex justify-content-end align-items-center">
        <div class="text-right" style="width: max-content">
          <%= yield :operations %>
