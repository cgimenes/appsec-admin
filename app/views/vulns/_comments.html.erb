<div class="modal fade" id="comments" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Comments</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'comments/comments' %>
      </div>
      <% if can? :create, Comment %>
        <footer class="modal-footer" style="flex-direction: column; align-items: inherit">
          <%= bootstrap_form_with(model: comment, local: true) do |form| %>
            <%= form.hidden_field :vuln_id %>
            <%= form.hidden_field :username %>
            <%= form.text_area :body, with_label: false %>
            <%= form.submit nil, class: 'btn-block' %>
          <% end %>
        </footer>
      <% end %>
    </div>
  </div>
</div>